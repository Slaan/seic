<div class="row">
  <table class="table table-striped">

    <!-- <colgroup>
        <col span="1" style="width: 33%;">
        <col span="1" style="width: 33%;">
        <col span="1" style="width: 33%;">
    </colgroup> -->

    <thead>
    <tr>
      <th class="col-md-1"></th>
      <!-- col for pictures -->
      <th class="col-md-2">Username</th>
      <th class="col-md-2">Name</th>
      <th class="col-md-2">Details</th>
    </tr>
    </thead>

    <tbody>

    <% @users.each do |user| %>
        <tr>
          <td>
            <% if user.picture? %>
                <%= image_tag user.picture.url %>
            <% else %>
                <%= image_tag 'https://s3.eu-central-1.amazonaws.com/seic-storage/public/images/missing_pic_thumb.png' %>
            <% end %>
          </td>
          <td><%= link_to user.username, user_path(id: user.id) %></td>
          <td><%= "#{user.first_name} #{user.name}" %></td>
          <td><%= user.details %></td>
        </tr>
    <% end %>
    </tbody>

  </table>
</div>
